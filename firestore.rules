
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /logs/{logId} {
      allow read: if resource.data.isPublic == true || (request.auth != null && resource.data.ownerId == request.auth.uid);
      allow create: if request.auth != null; // User must be logged in to create
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    match /logs/{logId}/comments/{commentId} {
      allow read: if true; // Comments can be read by anyone if the log is readable
      allow create: if request.auth != null; // Only authenticated users can create comments
      // allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid; // Future: allow owner to edit/delete
    }
    match /users/{userId}/likedLogs/{logId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Allow test writes if needed for debugging server actions or specific scenarios
    match /test_collection/{testId} {
       allow read, write: if true; // Be very careful with open rules like this in production
    }
  }
}
